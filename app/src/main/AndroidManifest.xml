<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e.learn">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".viewmodel.ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".pagination.MainPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FlipImageAnimation"></activity>
        <activity android:name=".recyclerviewmodel.RecyclerMain" />
        <activity android:name=".viewmodel.NewWordActivity" />
        <activity android:name=".viewmodel.MainScoreActivity" />
        <activity android:name=".newviewmodel.NewView" />
        <activity android:name=".recyclerviewmodel.NormalRecycler" />

        <service android:name=".firebase.FirebaseMessaginID">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>